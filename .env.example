# ParkaLot Docker Environment Configuration
# Copy this to .env and adjust values as needed

# ============================================
# LOCAL DATABASE CONFIGURATION (XAMPP/Docker)
# ============================================
# Standard XAMPP MySQL runs on port 3306
# phpMyAdmin is accessed via Apache (e.g., localhost:8081/phpmyadmin)
DB_HOST=host.docker.internal
DB_PORT=3306
DB_NAME=parkalots
DB_USER=root
DB_PASSWORD=

# ============================================
# APPLICATION SETTINGS
# ============================================
APP_ENV=development
APP_DEBUG=true

# ============================================
# AZURE BLOB STORAGE CONFIGURATION
# ============================================
# Enable Azure Blob Storage for file uploads
AZURE_STORAGE_ENABLED=false

# Azure Storage Account credentials
# Find these in Azure Portal > Storage Account > Access Keys
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key

# Container name for storing files
AZURE_STORAGE_CONTAINER_NAME=parkalot-files

# SAS token expiry time in seconds (default: 3600 = 1 hour)
AZURE_SAS_TOKEN_EXPIRY=3600

# ============================================
# AZURE DATABASE FOR MYSQL CONFIGURATION
# ============================================
# Enable Azure MySQL (set to true to use Azure instead of local DB)
AZURE_MYSQL_ENABLED=false

# Azure MySQL Server connection details
# Find these in Azure Portal > Azure Database for MySQL > Connection strings
AZURE_MYSQL_HOST=your-server.mysql.database.azure.com
AZURE_MYSQL_PORT=3306
AZURE_MYSQL_DATABASE=parkalotdb
AZURE_MYSQL_USERNAME=your_username@your-server
AZURE_MYSQL_PASSWORD=your_password

# SSL Certificate path for secure connection
# Download DigiCert Global Root CA from:
# https://dl.cacerts.digicert.com/DigiCertGlobalRootCA.crt.pem
AZURE_MYSQL_SSL_CA=config/ssl/DigiCertGlobalRootCA.crt.pem
AZURE_MYSQL_SSL_VERIFY=true
